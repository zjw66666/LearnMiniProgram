<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>pages/text/text.wxml\n</text>
<text>你好，小猪\n</text>

<!-- 2.selectable : true-->
<!-- 默认情况下text中的文本长按是不能选中 -->
<text selectable="{{true}}">Hllo ZJW\n</text>
<text selectable>Hello  zjw\n</text>

<!-- 3.space:决定文本空格的大小 -->
<!-- ensp: 半个中文字符大小 -->
<!-- emsp: 一个中文字符大小 -->
<text>Hello  zjw\n</text>
<text space="nbsp">Hello  zjw\n</text>
<text space="ensp">Hello  zjw\n</text>
<text space="emsp">Hello  zjw\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text>5 &gt; 3</text>